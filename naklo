#!/usr/bin/python3
"""
naklo is a batch FLAC tagger.
"""

import sys
import argparse


def parse_args():
    parser = argparse.ArgumentParser(
        description="provide templates with which to tag FLAC files."
    )
    parser.add_argument("-c", "--control-file", action="append",)
    parser.add_argument("-t", "--title-file", action="append",)
    parser.add_argument("flacs", metavar="<target FLACs to tag>")

    return parser.parse_args()


def main():
    args = parse_args()
    print(args)
    return 0

if __name__ == "__main__":
    sys.exit(main())
